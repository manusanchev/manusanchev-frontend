---
import "@/assets/css/main.css";
import AboutHeader from "@/components/about/header/AboutHeader.astro";
import SpeedInsights from '@vercel/speed-insights/astro';
import Analytics from '@vercel/analytics/astro';

interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  ogUrl?: string;
  twitterTitle?: string;
  twitterDescription?: string;
  twitterImage?: string;
  canonical?: string;
  type?: "website" | "article";
  author?: string;
  publishedTime?: string;
  tags?: string[];
}

const {
  title = "Manuel S치nchez - Frontend developer",
  description = "Desarrollador web en Valencia, Espa침a",
  ogTitle = title,
  ogDescription = description,
  ogImage = "/ogImage.webp",
  ogUrl = Astro.url.toString(),
  twitterTitle = ogTitle,
  twitterDescription = ogDescription,
  twitterImage = ogImage,
  canonical = Astro.url.toString(),
  type = "website",
  author,
  publishedTime,
  tags
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <script>
      (function () {
        const theme =
          localStorage.getItem("theme") ||
          (window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");
        document.documentElement.classList.add(theme);
      })();
    </script>

    <meta charset="UTF-8" />
    <link
      rel="preload"
      href="/fonts/geist/Geist-VariableFont_wght.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:site_name" content="Manuel S치nchez" />
    {type === "article" && author && (
      <meta property="article:author" content={author} />
    )}
    {type === "article" && publishedTime && (
      <meta property="article:published_time" content={publishedTime} />
    )}
    {type === "article" && tags && tags.map(tag => (
      <meta property="article:tag" content={tag} />
    ))}
    
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:domain" content="manusanchev.com" />
    <meta name="twitter:title" content={twitterTitle} />
    <meta name="twitter:description" content={twitterDescription} />
    <meta name="twitter:image" content={twitterImage} />
    <meta name="twitter:url" content={ogUrl} />
    
    <!-- JSON-LD Structured Data -->
    <script is:inline type="application/ld+json" set:html={
      JSON.stringify({
        "@context": "https://schema.org",
        "@type": type === "article" ? "BlogPosting" : "WebSite",
        "name": ogTitle,
        "description": ogDescription,
        "url": ogUrl,
        "image": ogImage,
        "publisher": {
          "@type": "Person",
          "name": "Manuel S치nchez",
          "url": "https://manusanchev.com"
        },
        ...(type === "article" && author ? {
          "author": {
            "@type": "Person",
            "name": author
          }
        } : {}),
        ...(type === "article" && publishedTime ? {
          "datePublished": publishedTime
        } : {}),
        ...(type === "article" && tags && tags.length > 0 ? {
          "keywords": tags.join(", ")
        } : {})
      })
    }>
    </script>
     <Analytics />
  </head>

  <body>
    <div class="w-full flex flex-col gap-y-8 px-4 mt-8 lg:px-0 lg:w-[45rem] lg:mx-auto">
      <!-- About Header -->
      <div class="animate-fade-in">
        <AboutHeader />
      </div>
      
      <!-- Page Content -->
      <div class="flex flex-col gap-y-8 mb-8">
        <slot />
      </div>
    </div>
    <SpeedInsights />
  </body>
</html>