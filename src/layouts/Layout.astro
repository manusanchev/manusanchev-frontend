---
import "@/assets/css/main.css";
---

<!doctype html>
<html lang="es">
  <head>
    <script>
      (function () {
        const theme =
          localStorage.getItem("theme") ||
          (window.matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");
        document.documentElement.classList.add(theme);
      })();
    </script>

    <meta charset="UTF-8" />
    <link
      rel="preload"
      href="/fonts/geist/Geist-VariableFont_wght.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Manuel Sánchez - Frontend developer</title>
    <meta name="description" content="Desarrollador web en Valencia, España" />
    <meta name="og:title" content="Manuel Sánchez - Frontend developer" />
    <meta
      name="og:description"
      content="Desarrollador web en Valencia, España"
    />
    <meta name="twitter:domain" content="manusanchev.com" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Manuel Sánchez - Frontend developer" />
    <meta
      name="twitter:description"
      content="Desarrollador web en Valencia, España"
    />
    <meta name="og:url" content="https://www.manusanchev.com" />
  </head>

  <body>
    <slot />
  </body>
</html>
