---
interface Props {
  project: any;
}
import { Icon } from "astro-icon/components";
const { project } = Astro.props;

const hasDemoAndLinks = project.links.demo || project.links.npm;
---

<article
  class="border dark:border-neutral-800 border-neutral-200 transition-colors md:dark:hover:bg-neutral-800 md:hover:bg-neutral-200/50 rounded-lg"
>
  <div class="px-4 py-2 flex flex-col">
    <div class="flex items-center justify-between">
      <p
        class={`font-medium dark:text-neutral-200 ${
          hasDemoAndLinks
            ? "underline md:no-underline md:hover:underline decoration-wavy decoration-neutral-700 dark:decoration-neutral-300 underline-offset-2 cursor-pointer"
            : ""
        }`}
      >
        <a
          href={project.links.demo ? project.links.demo : project.links.npm}
          target="_blank"
        >
          {project.title}
        </a>
      </p>
      {
        project.links?.github && (
          <a href={project.links.github} target="_blank">
            <Icon
              name="GithubIcon"
              class="size-4 dark:text-neutral-300 text-neutral-500 hover:text-neutral-900  transition-colors dark:hover:text-neutral-100 "
            />
          </a>
        )
      }
    </div>

    <p
      class="max-w-[70ch] dark:text-neutral-400 text-neutral-700 leading-relaxed text-sm"
    >
      {project.description}
    </p>
  </div>
</article>
