---
import HeaderContactLink from "@/components/about/header/contact/HeaderContactLink.astro";
import { Icon } from "astro-icon/components";
---

<nav>
  <ul class="flex items-center gap-x-4 px-2.5">
    <HeaderContactLink
      link="https://www.linkedin.com/in/manusanchev/"
      ariaLabel="linkedin"
      target="_blank"
      icon="LinkednIcon"
    />
    <HeaderContactLink
      link="https://github.com/manusanchev"
      ariaLabel="github"
      target="_blank"
      icon="GithubIcon"
    />
    <HeaderContactLink
      link="mailto:manuvempleo@gmail.com"
      ariaLabel="email"
      target="_blank"
      icon="EmailIcon"
    />
    <li class="hidden dark:block">
      <Icon
        id="toggle-theme-light"
        name="SunIcon"
        class="size-4 hover:rotate-90 cursor-pointer transition dark:hover:text-white text-neutral-500 hover:text-neutral-900 dark:text-neutral-300"
      />
    </li>
    <li class="dark:hidden">
      <Icon
        id="toggle-theme-dark"
        name="MoonIcon"
        class="size-4 cursor-pointer transition dark:hover:text-white dark:text-neutral-300 text-neutral-500 hover:text-neutral-900"
      />
    </li>
    <li>
      <span
        class="text-xs border rounded-full dark:text-green-700 dark:bg-green-100 dark:border-green-700 text-green-500 bg-green-50 border-green-500 px-1"
      >
        Beta
      </span>
    </li>
  </ul>
</nav>

<script>
  const toggleTheme = () => {
    const theme = document.documentElement.classList.toggle("dark");
    localStorage.setItem("theme", theme ? "dark" : "light");
  };

  document
    .getElementById("toggle-theme-light")
    ?.addEventListener("click", toggleTheme);
  document
    .getElementById("toggle-theme-dark")
    ?.addEventListener("click", toggleTheme);
</script>
