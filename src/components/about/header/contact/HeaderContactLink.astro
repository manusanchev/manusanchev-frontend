---
import { Icon } from "astro-icon/components";

interface Props {
  link: string;
  ariaLabel: string;
  target: string;
  icon: string;
}

const { link, ariaLabel, target, icon } = Astro.props;
---

<li>
  <a
    href={link}
    class="flex items-center justify-center dark:text-stone-400 text-stone-600 hover:text-stone-900 transition dark:hover:text-stone-100"
    aria-label={ariaLabel}
    target={target}
  >
    <Icon name={icon} class="size-4" />
  </a>
</li>
